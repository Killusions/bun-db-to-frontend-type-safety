  },
  "dependencies": {
    "@trpc/client": "^11.4.3",
    "@trpc/server": "^11.4.3",
    "drizzle-orm": "^0.44.3",
    "drizzle-zod": "^0.8.2",
    "superjson": "^2.2.2",
    "trpc-bun-adapter": "^1.3.0",
    "zod": "^4.0.5"
  }
